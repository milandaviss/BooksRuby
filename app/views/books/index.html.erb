<p style="color: green"><%= notice %></p>

<h1>Books</h1>


<div id="books">
  <div class="jumbotron" >
  <table class="table table-striped table-bordered table-hover">
      <thead class="table-light">
      <tr>
        <th>Book Name</th>
         
        <th>Author Name</th>
        
        <th>Description</th>
        <th></th>
        <th></th>

    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%=book.book_name%></td>
        <td><%=book.author_name%></td>
        <td ><%=book.description%></td>
        <td> <%= link_to "Show this book", book ,class:'btn btn-warning'%> </td>
        <td><%= link_to "Update", edit_book_path(book),class:'btn btn-info' %> </td>
        <td><%= button_to "Delete", book, method: :delete ,class:'btn btn-danger' %></td>
        <td><select name="cars" id="cars">
          <%@students.each do|student|%>
          <option value="<%=student.name%>"><%=student.name%></option>
          <%end%>
          </select> <%= link_to "Assign Book", book ,class:'btn btn-secondary' %> 
        </td>
      </tr>
      <%end %>
    </tbody>
</table>
</div>

<div class="container">
      <%= link_to "Add Books", new_book_path,class:'btn btn-success' %>
</div>



