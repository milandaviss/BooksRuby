<p style="color: green"><%= notice %></p>

<h1>Books</h1>


<div id="books">
  <div class="jumbotron" >
  <table class="table table-striped table-bordered table-hover">
      <thead class="table-light">
      <tr>
        <th>Book Name</th>
         
        <th>Author Name</th>
        
        <th>Description</th>
        <th></th>
        <th></th>

    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%=book.book_name%></td>
        <td><%=book.author_name%></td>
        <td ><%=book.description%></td>
        <td> <%= link_to "Show this book", book %> </td>
        <td><%= link_to "Edit this book", edit_book_path(book) %> </td>
        <td><%= button_to "Destroy this book", book, method: :delete %></td>
      </tr>
      <%end %>
    </tbody>
</table>

</div>


<%= link_to "New book", new_book_path,class:'btn btn-secondary' %>
